{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "paths": {
      "/@/*": ["./src/*"]
    },
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.scss"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
